<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../_shared/_head', title); %>
    <link rel="stylesheet" href="/lib/swal/sweetalert2.min.css" type="text/css" />
</head>
<body>
    <div class="mainGrid">
        <header>
            <%- include('../_shared/_navigator', brand, navMenu); %>
        </header>
        <main>
            <!-- Body Start here -->
            <div class="container">
                    <label for="Username" class="form-label">Username</label>
                    <input id="Username" type="text" class="form-control" value="<%=model.Username%>" readonly />
                    <label for="Color" class=""form-label>Color</label>
                    <div class="colorIcon form-control" style="background-color: <%=model.Color%>; width: 40px; height: 40px;"></div>
                    <hr />
                    <a class="btn btn-warning" href="/users/edit/<%=model.UserID%>">Edit</a>
                    <button id="deleteButton" type="button" class="btn btn-danger" onclick="deleteRecord('/users', <%=model.UserID%>, '<%=model.Username%>', '/users')">Delete</button>
                    <a class="btn btn-secondary" href="/users">Return</a>
            </div>
            <!-- Body End here -->
        </main>
        <footer>
            <%- include('../_shared/_footer'); %>
        </footer>
    </div>
    <%- include('../_shared/_scripts'); %>
    <script src="/lib/swal/sweetalert2.min.js" type="text/javascript"></script>
    <script src="/javascripts/crud.js" type="text/javascript"></script>
</body>
</html>
