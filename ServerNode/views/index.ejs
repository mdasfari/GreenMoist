<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_shared/_head', title); %>
</head>
<body>
    <div class="mainGrid">
        <header>
            <%- include('_shared/_navigator', brand, navMenu); %>
        </header>
        <main>
            <!-- Body Start here -->
            <h3>Dashboard</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header text-bg-primary">
                            Connected Devices
                        </div>
                        <div class="">
                            <div class="list-group list-group-flush">
                                <% if (model.devices) { %>
                                    <% model.devices.forEach((device)=>{%>
                                        <a href="/devices/details/<%=device.DeviceID%>" class="list-group-item list-group-item-action" aria-current="true"><%=device.Name%></a>
                                    <%});%>
                                <%} else{%>
                                    <a class="list-group-item list-group-item-action disabled" aria-disabled="true">no device found</a>
                                <%}%>
                              </div>
                        </div>
                        <div class="card-footer bg-light">
                            <span class="card-title">Total Devices</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header text-bg-danger">
                            Tasks
                        </div>
                        <div class="">
                            <div class="list-group list-group-flush">
                                <% if (model.tasks) { %>
                                    <% model.tasks.forEach((task)=>{%>
                                        <a href="/tasks/details/<%=task.TaskID%>" class="list-group-item list-group-item-action" aria-current="true"><%=task.Name%></a>
                                    <%});%>
                                <%} else{%>
                                    <a class="list-group-item list-group-item-action disabled" aria-disabled="true">no device found</a>
                                <%}%>
                              </div>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
                </div>
            </div>
            <!-- Body End here -->
        </main>
        <footer>
            <%- include('_shared/_footer'); %>
        </footer>
    </div>
    <%- include('_shared/_scripts'); %>
</body>
</html>