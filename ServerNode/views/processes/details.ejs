<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../_shared/_head', title); %>
    <link rel="stylesheet" href="/lib/swal/sweetalert2.min.css" type="text/css" />
</head>
<body>
    <div class="mainGrid">
        <header>
            <%- include('../_shared/_navigator', brand, navMenu); %>
        </header>
        <main>
            <!-- Body Start here -->
            <div class="container">
                <!-- Process -->
                <div class="card">
                    <div class="card-header bg-primary text-bg-primary">Process</div>
                    <div class="card-body row">
                        <div class="col-md-2">
                            <label class="form-label" for="ProcessSerial">Serial</label>
                            <input class="form-control" id="ProcessSerial" name="ProcessSerial" type="text" placeholder="Serial" value="<%=model.ProcessSerial%>" readonly />
                        </div>
                        <div class="col-md-7 mt-3 mt-md-0">
                            <label class="form-label" for="Name">Name</label>
                            <input class="form-control" id="Name" name="Name" type="text" placeholder="Name" value="<%=model.Name%>" readonly />
                        </div>
                        <div class="col-md-3 mt-3 mt-md-0">
                            <label class="form-label" for="ProcessType">Type</label>
                            <input class="form-control" id="ProcessType" name="ProcessType" type="text" value="<%=model.ProcessTypeDisplay%>" readonly />
                        </div>
                    </div>
                </div>
                <div class="card mt-2">
                    <div class="card-header bg-success text-bg-success">Pin</div>
                    <div class="card-body row align-items-end">
                        <div class="col-md-2">
                            <label class="form-label" for="Pin">GPIO #</label>
                            <input class="form-control" id="Pin" name="Pin" type="text" value="<%=model.PinDisplay%>" readonly />
                        </div>
                        <div class="col-md-5 mt-3 mt-md-0">
                            <label class="form-label" for="PinType">Type</label>
                            <input class="form-control" id="PinType" name="PinType" type="text" value="<%=model.PinTypeDisplay%>" readonly />
                        </div>
                        <div class="col-md-2">
                            <div class="form-check form-switch mt-3">
                                <input class="form-check-input" id="SerialOutRawData" name="SerialOutRawData" type="checkbox" <% if(model.SerialOutRawData) {%>checked<%}%> readonly />
                                <label class="form-check-label" for="SerialOutRawData">Debug Print</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check form-switch mt-3">
                                <input class="form-check-input" id="BroadcastValue" name="BroadcastValue" type="checkbox" <% if(model.BroadcastValue) {%>checked<%}%> readonly />
                                <label class="form-check-label" for="BroadcastValue">Broadcast Value</label>
                            </div>
                        </div>
                    </div>
                </div>
                <% if(model.ProcessType == 0) { %>
                    <div class="card mt-2" id="Threshold">
                        <div class="card-header bg-warning text-bg-warning">
                            <span class="card-title">Threshold</span>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-end">
                                <div class="col-md-4">
                                    <label class="form-label" for="ThresholdLow">Low</label>
                                    <input class="form-control" id="ThresholdLow" name="ThresholdLow" type="text" placeholder="Low" value="<%=model.ThresholdLow%>" />
                                </div>
                                <div class="col-md-4 mt-3 mt-md-0">
                                    <label class="form-label" for="ThresholdHigh">High</label>
                                    <input class="form-control" id="ThresholdHigh" name="ThresholdHigh" type="text" placeholder="High" value="<%=model.ThresholdHigh%>" />
                                </div>
                            </div>
                            </div>
                            <div class="card-body">
                            <div class="row mt-2">
                                <div class="col-md-6">

                                    <div class="card bg-success text-bg-success">
                                        <div class="card-body">
                                            <label class="form-label" for="TrueProcessType">Within the threshold</label>
                                            <input class="form-control" id="TrueProcessType" name="TrueProcessType" type="text" value="<%=model.TrueProcessTypeDisplay%>" readonly />
                                            <% if(model.TrueProcessType == 2 ) { %>}
                                                <div class="mt-2">                                            
                                                    <label class="form-label" for="TrueProcessID">Process Serial</label>
                                                    <input class="form-control" id="TrueProcessID" name="TrueProcessID" placeholder="Process Serial" value="<%=model.TrueProcessID%>" readonly />
                                                </div>
                                            <%}%>
                                            <div class="mt-2">
                                                <label class="form-label" for="TrueDebugMessage">Debug Message</label>
                                                <input class="form-control" id="TrueDebugMessage" name="TrueDebugMessage" placeholder="Debug Message" value="<%=model.TrueDebugMessage%>" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card bg-danger text-bg-danger mt-3 mt-md-0">
                                        <div class="card-body">
                                            <label class="form-label" for="FalseProcessType">Out of the threshold</label>
                                            <input class="form-control" id="FalseProcessType" name="FalseProcessType" type="text" value="<%=model.FalseProcessTypeDisplay%>" />
                                            <% if(model.FalseProcessType == 2 ) { %>}
                                                <div class="mt-2">
                                                    <label class="form-label" for="FalseProcessID">Process Serial</label>
                                                    <input class="form-control" id="FalseProcessID" name="FalseProcessID" placeholder="Process Serial" value="<%=model.FalseProcessID%>" readonly />
                                                </div>
                                            <%}%>
                                            <div class="mt-2">
                                                <label class="form-label" for="FalseDebugMessage">Debug Message</label>
                                                <input class="form-control" id="FalseDebugMessage" name="FalseDebugMessage" placeholder="Debug Message" value="<%=model.FalseDebugMessage%>" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <%} else if (model.ProcessType == 1) {%>
                    <div class="card mt-2" id="LogicType">
                        <div class="card-header bg-secondary text-bg-secondary">
                            <span class="card-title">Execution</span>
                        </div>
                        <div class="card-body row align-items-end">
                            <div class="col-md-2" id="ActionTypeLogic">
                                <label class="form-label" for="ActionType">Action</label>
                                <input class="form-control" id="ActionType" name="ActionType" type="text" value="<%=model.ActionTypeDisplay%>" readonly />
                            </div>
                        </div>
                    </div>
                <% }%>
                <!-- /Process -->
                <div class="ActionButtons">
                    <a class="btn btn-warning" href="/tasks/processes/edit/<%=model.ProcessID%>">Edit</a>
                    <button id="deleteButton" type="button" class="btn btn-danger" onclick="deleteRecord('/tasks/processes/', <%=model.ProcessID%>, '<%=model.Name%>', '/tasks/processes')">Delete</button>
                    <a class="btn btn-secondary" href="/tasks/details/<%=model.TaskID%>">Return</a>
                </div>
            </div>
            <!-- Body End here -->
        </main>
        <footer>
            <%- include('../_shared/_footer'); %>
        </footer>
    </div>
    <%- include('../_shared/_scripts'); %>
    <script src="/lib/swal/sweetalert2.min.js" type="text/javascript"></script>
    <script src="/javascripts/crud.js" type="text/javascript"></script>
</body>
</html>

